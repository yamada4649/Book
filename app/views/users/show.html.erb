<div class="container">
  <div class="row">
   <div class="col-xs-3">
     <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
     <%= render partial: 'users/form_html', locals: { book: @book, user:@user } %>

   </div>
   <div class="col-xs-9">
     <h2>Books</h2>
      <table class="table table-hover table-inverse">
       <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
         <% @userbooks.each do |userbook| %>
        <tr>
          <td>
           <%= attachment_image_tag @user, :profile_image, size:"100x100", format:"jpeg", fallback: "no_image.jpg" %>

          </td>
          <td>
            <%= link_to book_path(userbook) do %>
            <%= userbook.title %>
            <% end %>
          </td>
          <td>
            <%= userbook.body %>
          </td>
        </tr>
        <% end %>
      </tbody>
     </table>
   </div>
  </div>
</div>
