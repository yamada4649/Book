<div class="container">
  <div class="row">
    <div class="top-message col-md-offset-3 col-md-6">

    <h2>User info</h2>
    <% if @user.errors.any? %>
   <%= pluralize(@user.errors.count, " prohibit error") %>
   <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
     <%= form_for(@user) do |f| %>

     <div class="field">
       <label class="user_name">Name</label>
       <span> <%= f.text_field :name %></span>
     </div>
     <div class="field">
       <label for="user_image">Image</label>
        <%= f.attachment_field :profile_image %>

     </div>
     <div class="field">
       <label for="user_introduction">
         Introduction
       </label>
       <%= f.text_area :introduction,class:"form-control", rows:"3", placeholder:"コメントここに" %>
     </div>
    <div>


    </div>
    <div>
     <%= f.submit 'Update User' %>

    </div>
     <% end %>
  </div>
</div>
</div>
 