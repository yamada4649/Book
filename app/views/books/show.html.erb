<div class="container">
  <div class="row">
   <div class="col-xs-3">
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
       <%= render partial: 'users/form_html', locals: { book: @books, user:@user } %>

  </div>
<div class="col-xs-9">

    <h3>Book detail</h3>
 <table class= "table table-hover table-inverse" >
  <thead>
  	<tr>

  	 <th colspan="3"></th>
  	</tr>
  </thead>
  <tbody>
   
    <tr>
      <td>
        <%= link_to user_path(@user.id) do %>
        <%= attachment_image_tag @user, :profile_image, size:"100x100", format:"jpeg", fallback: "no_image.jpg" %>
        <br>
        <%= @user.name %>
        <% end %>
      </td>
      <td>
        <%= @books.title %>
      </td>
      <td>
        <%= @books.body %>
      </td>
     <% if @books.user == current_user %>
      <td>
        <%= link_to 'Edit', edit_book_path(@books.id) %>
      </td>
      <td>
        <% if @books.user == current_user %>
        <%= link_to 'Destroy', book_path(@books),method: :delete,"data-confirm" =>"Are you sure?" %>
        <% end %>
      </td>
      <% end %>
    </tr>


  </tbody>
</table>
</div>
</div>
</div>